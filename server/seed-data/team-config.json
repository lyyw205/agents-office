  "workflows": [
    {
      "name": "pipeline-a",
      "description": "레퍼런스 → 위젯 라이브러리 (JSON-first)",
      "steps": [
        {
          "order": 1,
          "name": "Behance 스크래핑",
          "agent": "analyzer",
          "skill": "scrape-reference",
          "input": "Behance URL",
          "output": "references/{name}/ 이미지"
        },
        {
          "order": 2,
          "name": "Gemini 매핑 분석",
          "agent": "analyzer",
          "skill": "map-reference",
          "input": "레퍼런스 이미지",
          "output": "output/mapping-{name}.json"
        },
        {
          "order": 3,
          "name": "매핑 정확도 검증",
          "agent": "validator",
          "skill": "validate-mapping",
          "input": "매핑 JSON + 레퍼런스 이미지",
          "output": "정확도 리포트 (95%+ 통과)"
        },
        {
          "order": 4,
          "name": "유저 편집/검수",
          "agent": null,
          "skill": null,
          "input": "매핑 웹앱",
          "output": "보정된 매핑 JSON"
        },
        {
          "order": 5,
          "name": "JSON 위젯 생성",
          "agent": "builder",
          "skill": "build-widgets",
          "input": "매핑 JSON",
          "output": "*.widget.json + _registry.json"
        },
        {
          "order": 6,
          "name": "위젯 품질 검증",
          "agent": "validator",
          "skill": "validate-widgets",
          "input": "생성된 .widget.json",
          "output": "검증 리포트"
        }
      ],
      "estimatedTime": "15-20분",
      "parallelizable": false
    },
    {
      "name": "pipeline-b",
      "description": "제품 → HTML 상세페이지 (JSON-first 렌더링)",
      "steps": [
        {
          "order": 1,
          "name": "섹션 플래닝",
          "agent": "planner",
          "skill": "plan-sections",
          "input": "제품 정보",
          "output": "{product}-section-plan.json"
        },
        {
          "order": 2,
          "name": "위젯 선택",
          "agent": "planner",
          "skill": "select-widgets",
          "input": "섹션 플랜 + 스타일 선호",
          "output": "{product}-widget-selection.json"
        },
        {
          "order": 3,
          "name": "HTML 조합",
          "agent": "composer",
          "skill": "compose-page",
          "input": "위젯 선택 + 제품 정보",
          "output": "{product}-detail.html"
        },
        {
          "order": 4,
          "name": "Figma 프롬프트 생성",
          "agent": "composer",
          "skill": "generate-figma-prompt",
          "input": ".widget.json",
          "output": "{product}-figma-prompt.md"
        },
        {
          "order": 5,
          "name": "최종 검증",
          "agent": "validator",
          "skill": "validate-output",
          "input": "최종 HTML",
          "output": "17개 체크리스트 결과"
        }
      ],
      "estimatedTime": "10-15분",
      "parallelizable": false
    },
    {
      "name": "pipeline-c",
      "description": "위젯 라이브러리 확장",
      "steps": [
        {
          "order": 1,
          "name": "커버리지 리포트",
          "agent": "validator",
          "skill": "coverage-report",
          "input": "_registry.json",
          "output": "갭 분석 리포트"
        },
        {
          "order": 2,
          "name": "위젯 자동 확장",
          "agent": "builder",
          "skill": "expand-library",
          "input": "갭 리스트 + 기존 위젯",
          "output": "신규 .widget.json 파일들"
        },
        {
          "order": 3,
          "name": "확장 결과 검증",
          "agent": "validator",
          "skill": "validate-widgets",
          "input": "신규 위젯",
          "output": "검증 리포트"
        }
      ],
      "estimatedTime": "5-10분",
      "parallelizable": false
    }
  ],

